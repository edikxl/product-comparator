<ProductsScreen>:

    ScrollView:

        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height

            MDToolbar:
                title: "Категории"

            MDList:

                OneLineAvatarIconListItem:
                    divider: None
                    text: 'Все продукты'

                    IconLeftWidget:
                        icon: 'cart'

                    CounterLabel:
                        text: '13'

                OneLineAvatarIconListItem:
                    divider: None
                    text: 'Фрукты'

                    IconLeftWidget:
                        icon: 'food-apple-outline'

                    CounterLabel:
                        text: '8'

                OneLineAvatarIconListItem:
                    divider: None
                    text: 'Соки'

                    IconLeftWidget:
                        icon: 'beer-outline'

                    CounterLabel:
                        text: '5'

    MDFloatingActionButton:
        icon: 'plus'
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {'right': 0.95, 'y': 0.05}