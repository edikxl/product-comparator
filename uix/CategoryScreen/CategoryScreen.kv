<ProductItem>
    divider: None
    text: root.name

    ImageLeftWidget:
        source: root.imagePath

    PriceLabel:
        text: root.averagePrice

<CategoryScreen>:

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: root.categoryName
            left_action_items: [['arrow-left', lambda _: root.onBack()]]
            # TODO Add product counter to right items
            right_action_items: [['filter-variant', lambda x: root.filterButtonCallback()]]

        ScrollView:

            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height

                MDList:
                    id: productList