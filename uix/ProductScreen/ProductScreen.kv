<ProductScreen>:

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Продукт'
            left_action_items: [['arrow-left', lambda _: root.onBack()]]
            # TODO Add product counter to right items
            right_action_items: [['update', lambda x: root.updateProductData()]]

        ScrollView:

            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(20)
                padding: dp(20)

                MDBoxLayout:
                    id: box_top
                    spacing: "20dp"
                    adaptive_height: True

                    FitImage:
                        source: root.imagePath
                        size_hint: .3, None
                        height: headerBox.height

                    MDBoxLayout:
                        id: headerBox
                        orientation: "vertical"
                        adaptive_height: True
                        spacing: "10dp"
                        padding: 0, "10dp", "10dp", "10dp"

                        MDLabel:
                            text: root.productName
                            height: self.texture_size[1]
                            font_style: "H5"
                            bold: True
                            size_hint_y: None

                        MDLabel:
                            text: root.price
                            height: self.texture_size[1]
                            size_hint_y: None

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "10dp", 0, 0, 0
                    adaptive_height: True

                    MDLabel:
                        text: 'Barcode'
                        font_style: "H5"
                        bold: True

                    MDLabel:
                        text: root.barcode

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: "10dp", 0, 0, 0
                    adaptive_height: True

                    MDLabel:
                        text: 'Состав'
                        font_style: "H5"
                        bold: True

                    MDLabel:
                        text: root.ingridients
