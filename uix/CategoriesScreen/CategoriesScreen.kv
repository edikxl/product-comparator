<Category>
    divider: None
    text: root.name

    IconLeftWidget:
        icon: root.icon

    CounterLabel:
        text: root.productsNumber

<CategoriesScreen>:

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Категории'
            right_action_items: [['filter-variant', lambda x: root.filterButtonCallback()]]

        ScrollView:

            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height

                MDList:
                    id: categoryList

    MDFloatingActionButton:
        on_press: root.changeScreenToAddCategory()
        icon: 'plus'
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {'right': 0.95, 'y': 0.05}